{
  "name": "epayco-monorepo",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@8.15.4",
  "scripts": {
    "build": "pnpm -r run build",
    "dev": "pnpm -r --parallel run dev",
    "lint": "pnpm -r run lint",
    "test": "pnpm -r run test",
    "format": "pnpm -r run format",
    "prepare": "husky install",
    "docker:up": "docker compose -f infra/docker-compose.yml up -d",
    "docker:down": "docker compose -f infra/docker-compose.yml down",
    "docker:logs": "docker compose -f infra/docker-compose.yml logs -f"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^15.2.2",
    "eslint-plugin-prettier": "^5.1.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,json,vue}": [
      "prettier --write"
    ],
    "services/wallet-db-service/src/**/*.{ts,tsx}": [
      "pnpm exec eslint --cwd services/wallet-db-service --fix --config .eslintrc.cjs"
    ],
    "services/wallet-api-service/src/**/*.{ts,tsx}": [
      "pnpm exec eslint --cwd services/wallet-api-service --fix --config .eslintrc.cjs"
    ],
    "packages/shared/src/**/*.{ts,tsx}": [
      "pnpm exec eslint --cwd packages/shared --fix --config .eslintrc.cjs"
    ],
    "apps/frontend/src/**/*.{ts,tsx,vue}": [
      "pnpm exec eslint --cwd apps/frontend --fix --config .eslintrc.cjs"
    ]
  }
}
